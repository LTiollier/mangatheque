APP_NAME=Mangathèque
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ─── Base de données PostgreSQL (Supabase ou Docker local) ───────────────────
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=password

# ─── Session ─────────────────────────────────────────────────────────────────
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
# En production : mettre le domaine apex partagé (ex: .mondomaine.com)
SESSION_DOMAIN=null
# En production : true (force HTTPS)
SESSION_SECURE_COOKIE=false

# ─── Sanctum SPA Cookie Authentication ───────────────────────────────────────
# URL du frontend Next.js
FRONTEND_URL=http://localhost:3000
# Domaines autorisés à recevoir des cookies de session stateful (séparés par virgule)
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:3001

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@mangatheque.example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ─── API externes ─────────────────────────────────────────────────────────────
RAKUTEN_CLIENT_ID=
RAKUTEN_CLIENT_SECRET=
